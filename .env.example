# FastAPI Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Snowflake Configuration (Secure Setup)
SNOWFLAKE_ACCOUNT=your-account.snowflakecomputing.com
SNOWFLAKE_USER=your-username
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_DATABASE=MANTRA_TRACKER
SNOWFLAKE_SCHEMA=ICEBERG_TABLES
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
# SNOWFLAKE_ROLE=MANTRA_RECITATION_ROLE  # Optional: Use dedicated role

# Security Settings
ENABLE_SECURITY_VALIDATION=true
REQUIRE_SECURE_BUCKETS=true
MAX_CONNECTION_RETRIES=3
CONNECTION_TIMEOUT_SECONDS=60
STORAGE_ENCRYPTION_REQUIRED=true
BLOCK_PUBLIC_BUCKET_ACCESS=true

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Optional: Airtable Integration
# AIRTABLE_BASE_ID=your-base-id
# AIRTABLE_API_KEY=your-api-key